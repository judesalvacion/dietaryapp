        <Button
            android:id="@+id/tuesday"
            android:layout_width="364dp"
            android:layout_height="50dp"
            android:text="Tuesday" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

