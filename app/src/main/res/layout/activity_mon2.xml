<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0FFFF"
    tools:context=".mon2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="MONDAY"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Breakfast"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/teal_700"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="100ml Oatmeal, x2 Boiled Eggs, x1 Banana"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/img" />

        <ImageView

            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/img_1" />

        <ImageView
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@drawable/img_21" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Lunch"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/teal_700"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="x2 Tuna Sandwich, x1 Sliced Papaya "
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/img_20" />

        <ImageView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/img_22" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Dinner"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/teal_700"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="200mg Steamed Chicken Breast, Steamed Broccoli"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/img_23" />

        <ImageView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/img_24" />
    </LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Previous Page" />


</LinearLayout>